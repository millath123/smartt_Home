        <script>
            function deleteCategory(categoryId, categoryRow) {
                fetch(`/admin/category/${categoryId}`, {
                    method: 'DELETE'
                })
                    .then(response => {
                        if (response.ok) {
                            console.log('Category deleted');
                            if (categoryRow) {
                                categoryRow.remove();
                            }
                        } else {
                            console.error('Error deleting category:', response.status);
                        }
                    })
                    .catch(error => {
                        console.error('Fetch error:', error);
                    });
            }
        </script>

